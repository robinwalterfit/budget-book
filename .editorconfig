# EditorConfig root:
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Configuration files
[*.{cfg,ini,toml}]
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

# Base configuration for files
[*.py]
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

# reStructuredText specific configuration
[*.rst]
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

# YAML specific configuration
[*.{yaml,yml}]
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
